@page
@model ACMEProject.Pages.Views.EmployeeDataModel

@{
    ViewData["Title"] = "EmployeeData";
}

<h1>EmployeeData</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeId" />
            <div class="form-group">
                <label asp-for="Employee.EmployeeNum" class="control-label"></label>
                <input asp-for="Employee.EmployeeNum" class="form-control" />
                <span asp-validation-for="Employee.EmployeeNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmployedDate" class="control-label"></label>
                <input asp-for="Employee.EmployedDate" class="form-control" />
                <span asp-validation-for="Employee.EmployedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Terminated" class="control-label"></label>
                <input asp-for="Employee.Terminated" class="form-control" />
                <span asp-validation-for="Employee.Terminated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PersonId" class="control-label"></label>
                <select asp-for="Employee.PersonId" class="form-control" asp-items="ViewBag.PersonId"></select>
                <span asp-validation-for="Employee.PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
