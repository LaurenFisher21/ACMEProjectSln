@page
@model ACMEProject.Pages.Views.DeleteEmployeeModel

@{
    ViewData["Title"] = "DeleteEmployee";
}

<h1>DeleteEmployee</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Employee Number: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeNum)
        </dd>
        <dt class="col-sm-2">
            Date Employed: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployedDate)
        </dd>
        <dt class="col-sm-2">
            Date Terminated: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Terminated)
        </dd>
        <dt class="col-sm-2">
            First Name: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Person.FirstName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Employee.EmployeeId" />
        <input type="hidden" asp-for="Employee.PersonId"/>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
