@page
@model ACMEProject.Pages.Views.DatalistModel

@{
    ViewData["Title"] = "Datalist";
}

<h1>Employee List</h1>

<p>
    <a asp-page="AddEmployee">Create New Employee</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birthday</th>
            <th>Employee Number</th>
            <th>Date Employed</th>
            <th>Date Terminated</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Terminated)
            </td>
            <td>
                <a asp-page="./EmployeeData" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeId">Details</a> |
                <a asp-page="./DeleteEmployee" asp-route-id="@item.EmployeeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
